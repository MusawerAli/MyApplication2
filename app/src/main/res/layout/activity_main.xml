<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="12"
    android:orientation="vertical"
    android:background="#5628"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:id="@+id/msg"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:weightSum="4"
       android:orientation="horizontal"
       >
       <Button
           android:id="@+id/start_btn"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="2"

           android:background="#432"

           android:text="@string/start_btn" />

       <Button

           android:id="@+id/reset_btn"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"


           android:background="#7572"
           android:text="@string/reset_btn" />

   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.5"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="16"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#983"
            android:layout_weight="6"
            android:text="Guess Game"

            android:fontFamily="casual"
            android:textSize="20dp"
            android:id="@+id/guessgame"
            />
        <Button
            android:id="@+id/arr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:background="#4332"
            android:fontFamily="casual"
            android:text="arr"
            android:textSize="16dp" />

        <Button
            android:id="@+id/radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:background="#276"
            android:fontFamily="casual"
            android:text="Radio"
            android:textSize="16dp" />

        <Button
            android:id="@+id/practise"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="3"
            android:background="#276"
            android:fontFamily="casual"
            android:text="Practise"
            android:textSize="16dp" />

        <Button
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:background="#972"
            android:fontFamily="casual"
            android:text="Spinner"
            android:textSize="16dp" />


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:src="@drawable/crud1"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/create"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>

        <Button
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/search"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>
        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/update"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>
        <Button

            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:background="@drawable/delete"
            />


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/login"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"></View>

        <Button
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/signup"

            />
    </LinearLayout>








</LinearLayout>